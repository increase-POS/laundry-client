<UserControl x:Class="laundryApp.View.settings.uc_permissions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:laundryApp.View.settings"
             mc:Ignorable="d"  Tag="permissions"  Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             KeyDown="UserControl_KeyDown"
             d:DesignHeight="870" d:DesignWidth="950">
    <Grid x:Name="grid_main" Margin="20 10" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" MinWidth="705"/>
            <ColumnDefinition x:Name="gridWidth" Width="*" />
        </Grid.ColumnDefinitions>


        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Border>
                <Border.Effect>
                    <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                </Border.Effect>
                <Grid  Margin="0 10 10 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="7,7,0,0"  Height="52"
                        Grid.Row="0"  
                        BorderBrush="{x:Null}"
                        Background="{StaticResource SecondColor}">
                    <Border.Effect>
                        <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                    </Border.Effect>
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="bdr_home" Tag="home" Background="White" BorderThickness="0" Visibility="Visible"  
                                Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="10,10,0,0"
                                BorderBrush="Transparent" Margin="10,5,0,0" Grid.Column="0">
                            <Button x:Name="btn_home" Click="btn_tabs_Click" Tag="home" Background="Transparent" 
                                    materialDesign:RippleAssist.Feedback="Transparent" BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>

                                <Path Fill="{StaticResource SecondColor}" Stretch="Fill"  
                                       FlowDirection="LeftToRight"
                                      VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0"
                                       Width="25" Height="25"  x:Name="path_home" Tag="home"
                                         Data="{StaticResource home}"  />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_catalog" Tag="catalog" Grid.Column="1" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" 
                                VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="10,5,0,0">
                            <Button x:Name="btn_catalog" Click="btn_tabs_Click" Tag="catalog" Background="Transparent"   
                                    materialDesign:RippleAssist.Feedback="Transparent" BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger x:Name="trig" RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0" 
                                       Width="25" Height="25"    x:Name="path_catalog" Tag="catalog"
                                         Data="{StaticResource catalog}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_purchase" Tag="purchase" Grid.Column="2" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_purchase" Click="btn_tabs_Click" Tag="purchase"
                                    Background="Transparent" 
                                    materialDesign:RippleAssist.Feedback="Transparent"
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                       Width="25" Height="25"    x:Name="path_purchases" Tag="purchase"
                                         Data="{StaticResource purchases}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_storage" Tag="storage" Grid.Column="3" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55"
                                VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_storage" Click="btn_tabs_Click" Tag="storage" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent"  
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                       Width="25" Height="25"    x:Name="path_storage" Tag="storage" 
                                         Data="{StaticResource storage}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_kitchen" Tag="kitchen" Grid.Column="4" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55"
                                VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_kitchen" Click="btn_tabs_Click" Tag="kitchen" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent"  
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                       Width="25" Height="25"    x:Name="path_kitchen"  Tag="kitchen"
                                         Data="{StaticResource cleaningMachine}"/>
                            </Button>
                        </Border>
                        <Border Name="bdr_sale" Tag="sales" Grid.Column="5" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_sale" Click="btn_tabs_Click" Tag="sales" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                       Width="25" Height="25"    x:Name="path_sales" Tag="sales"
                                         Data="{StaticResource sales}" />
                            </Button>
                        </Border>
                        <Border Name="bdr_delivery" Tag="delivery" Grid.Column="6" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                                <Button x:Name="btn_delivery" Click="btn_tabs_Click" Tag="delivery" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                       Width="25" Height="25"    x:Name="path_delivery" Tag="delivery"
                                         Data="{StaticResource delivery}" />
                                </Button>
                            </Border>
                        <Border x:Name="bdr_accounts" Tag="accounts" Grid.Column="7" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_account" Click="btn_tabs_Click" Tag="accounts" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0" HorizontalAlignment="Center"
                                 Width="25" Height="25"   x:Name="path_accounting" Tag="accounts"
                                         Data="{StaticResource accounts}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_reports" Tag="reports" Grid.Column="8" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_reports" Click="btn_tabs_Click" Tag="reports" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55"
                                    Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0"
                                   Width="25" Height="25" x:Name="path_reports" Tag="reports"
                                      HorizontalAlignment="Center"
                                         Data="{StaticResource reports}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_sectionData" Tag="sectionData" Grid.Column="9" Background="{StaticResource SecondColor}" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_sectionData" Click="btn_tabs_Click" Tag="sectionData" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0"
                                      Width="25" Height="25"   x:Name="path_sectionData" Tag="sectionData"
                                  HorizontalAlignment="Center"
                                         Data="{StaticResource data}" />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_settings" Tag="settings" Background="{StaticResource SecondColor}" Grid.Column="10" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_settings" Click="btn_tabs_Click" Tag="settings" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0"
                              Width="25" Height="25"   x:Name="path_settings" Tag="settings"
                                  HorizontalAlignment="Center"
                                         Data="{StaticResource settings}"  />
                            </Button>
                        </Border>
                        <Border x:Name="bdr_alerts" Tag="alerts" Background="{StaticResource SecondColor}" Grid.Column="11" BorderThickness="0"  Height="40" Width="55" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,0">
                            <Button x:Name="btn_alerts" Click="btn_tabs_Click" Tag="alerts" Background="Transparent"  
                                    materialDesign:RippleAssist.Feedback="Transparent" 
                                    BorderBrush="Transparent" Height="auto" Width="55" Padding="0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                    <Path Fill="White" Stretch="Fill"  FlowDirection="LeftToRight"
                                          VerticalAlignment="Top" Margin="0"
                              Width="25" Height="25"   x:Name="path_alerts"  Tag="alerts"
                                  HorizontalAlignment="Center"
                                         Data="{StaticResource bell}" />
                            </Button>
                        </Border>
                    </Grid>
                </Border>

                <Border CornerRadius="0,0,7,7" 
                        Grid.Row="1"  
                        BorderBrush="{x:Null}"
                        Background="White" Height="auto">
                    <Border  Height="auto" Background="Transparent">
                        
                        <!--#region secondTabs-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" MinHeight="40"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="sp_mainPath" Orientation="Horizontal" Margin="10 5"
                          VerticalAlignment="Center"/>
                            <Border Grid.Row="1" x:Name="bdrMain" Height="auto" Background="Transparent">
                                <Grid x:Name="grid_secondLevel" Grid.Row="1" Margin="10,10,10,10" MinHeight="80" Visibility="Visible">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" MinHeight="40"/>
                                        <RowDefinition Height="auto" MinHeight="40"/>
                                        <RowDefinition Height="auto" MinHeight="40"/>
                                    </Grid.RowDefinitions>

                                </Grid>
                            </Border>
                        </Grid>
                        <!--#endregion-->
                    </Border>
                </Border>
            </Grid>
            </Border>

            <Border Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Border Margin="0,5,10,0" Grid.Row="1"  Background="White" CornerRadius="10 10 0 0">
                       
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>


                            <Grid  Grid.Row="1" >
                                <Border Margin="5,5,5,17.5"   Grid.Row="1" CornerRadius="10" x:Name="brd_roundDataGrid1" BorderThickness="0" 
                            Background="White"/>
                                <DataGrid  Margin="5,5,5,5" Grid.Row="1"  IsReadOnly="True"   HeadersVisibility="Column"
                       x:Name="dg_permissions"   AutoGenerateColumns="False"   Background="White"
                        ColumnWidth="SizeToHeader"    AlternatingRowBackground="#f3f3f3" AlternationCount="2">
                                    <DataGrid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=brd_roundDataGrid1}"/>
                                    </DataGrid.OpacityMask>
                                    <DataGrid.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="Background" Value="{StaticResource dataGridHeader_background}" />
                                            <Setter Property="BorderBrush" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                                            <Setter Property="Foreground" Value="{StaticResource ThickGrey}"/>
                                        </Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="*"  Header="Permission" IsReadOnly="True"  
                                            Binding="{Binding Path=objectName,Converter={StaticResource permissionsNameConverter }}"/>
                                        <DataGridTemplateColumn Header="Show" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox FlowDirection="LeftToRight" x:Name="chb_showOb" 
                                              IsChecked="{Binding showOb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding showOb}" Value="2">
                                                                        <Setter Property="IsEnabled" Value="False" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Add" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox FlowDirection="LeftToRight" IsChecked="{Binding addOb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding addOb}" Value="2">
                                                                        <Setter Property="IsEnabled" Value="False" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Update" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox FlowDirection="LeftToRight"  IsChecked="{Binding updateOb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding updateOb}" Value="2">
                                                                        <Setter Property="IsEnabled" Value="False" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn  Header="Delete" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox FlowDirection="LeftToRight" IsChecked="{Binding deleteOb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding deleteOb}" Value="2">
                                                                        <Setter Property="IsEnabled" Value="False" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Report"  >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox FlowDirection="LeftToRight" IsChecked="{Binding reportOb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding reportOb}" Value="2">
                                                                        <Setter Property="IsEnabled" Value="False" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </Grid>

                        </Grid>
                    </Border>
                    <Border Grid.Row="2" Margin="0,0,10,5" Background="White" CornerRadius="0,0,7,7" >

                        <Button x:Name="btn_save" Click="Btn_save_Click"   Content="Update"
                            materialDesign:ButtonAssist.CornerRadius="7"
                            Margin="10 0 10 10"
                          Background="{StaticResource SecondColor}" BorderBrush="{x:Null}"
                      Foreground="White" />
                    </Border>

                </Grid>
            </Border>
            
        </Grid>

        <Border Margin="10 10 0 5" Grid.Column="1"  >
            <Border.Effect>
                <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Border  Background="{StaticResource MainColor}"   CornerRadius="7 7 0 0">

                    <Grid  Height="40" Margin="10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Path Fill="White" Stretch="Fill"
                           VerticalAlignment="Center" 
                        Width="20" Height="20" FlowDirection="LeftToRight"
                              Data="{StaticResource lock}"/>

                        <TextBlock Grid.Column="1" Text="permission" x:Name="txt_title" Margin="10,0,0,0"  Foreground="White" 
                     FontSize="14"     VerticalAlignment="Center" 
                           FontWeight="Bold" />
