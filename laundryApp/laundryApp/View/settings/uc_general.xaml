                                                              Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
                                                              Checked="userSetting_check"  Margin="0" Height="40"
                                                              Unchecked="userSetting_uncheck"/>
                    </Border>
                    <Border  Margin="5" Background="White" CornerRadius="16" Height="40">

